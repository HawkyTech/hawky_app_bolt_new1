{
  "expo": {
    "name": "Hawky",
    "slug": "hawky-mobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Hawky.png",
    "scheme": "hawky",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Hawky.png",
        "backgroundColor": "#4CAF50"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/Hawky.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Hawky to use your location to find nearby street vendors and provide personalized recommendations."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}